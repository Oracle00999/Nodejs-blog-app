<header
  class="header"
  style="
    background: #ffffff;
    color: #2d2d2d;
    padding: 18px 0;
    position: relative;
    z-index: 10;
    border-bottom: 1px solid #f0f0f0;
  "
>
  <div
    class="header__container"
    style="
      max-width: 1200px;
      margin: auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      position: relative;
    "
  >
    <a
      href="/"
      class="header_logo"
      style="
        font-size: 1.6rem;
        font-weight: 700;
        color: #2d2d2d;
        text-decoration: none;
        letter-spacing: 0.5px;
        z-index: 12;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      "
    >
      NodeJS Blog
    </a>
    <!-- Hamburger menu for mobile -->
    <button
      class="header__toggle"
      aria-label="Toggle navigation"
      style="
        display: none;
        background: none;
        border: none;
        color: #2d2d2d;
        font-size: 1.5rem;
        cursor: pointer;
        margin-left: auto;
        z-index: 12;
        padding: 4px;
      "
      onclick="document.querySelector('.header_nav').classList.toggle('open')"
    >
      <i class="fas fa-bars"></i>
    </button>
    <nav
      class="header_nav"
      style="flex: 1; margin-left: 40px; transition: max-height 0.3s ease"
    >
      <ul
        style="
          display: flex;
          gap: 32px;
          list-style: none;
          margin: 0;
          padding: 0;
        "
      >
        <li>
          <a
            href="/"
            style="
              color: #2d2d2d;
              text-decoration: none;
              font-size: 1rem;
              transition: color 0.2s ease;
              font-weight: 500;
              padding: 8px 0;
            "
            >Home</a
          >
        </li>
        <li>
          <a
            href="/about"
            style="
              color: #2d2d2d;
              text-decoration: none;
              font-size: 1rem;
              transition: color 0.2s ease;
              font-weight: 500;
              padding: 8px 0;
            "
            >About</a
          >
        </li>
        <li>
          <a
            href="/contact"
            style="
              color: #2d2d2d;
              text-decoration: none;
              font-size: 1rem;
              transition: color 0.2s ease;
              font-weight: 500;
              padding: 8px 0;
            "
            >Contact</a
          >
        </li>
      </ul>
    </nav>
    <div class="header__button" style="margin-left: 32px">
      <button
        class="searchBtn"
        aria-expanded="false"
        style="
          padding: 10px 24px;
          border: 1.5px solid #007bff;
          border-radius: 6px;
          background: transparent;
          color: #007bff;
          font-weight: 600;
          cursor: pointer;
          transition: all 0.2s ease;
          font-size: 0.95rem;
        "
      >
        Search
      </button>
    </div>
  </div>
  <style>
    @media (max-width: 900px) {
      .header__container {
        flex-direction: column !important;
        align-items: stretch !important;
        gap: 16px !important;
      }
      .header_nav {
        margin-left: 0 !important;
        width: 100% !important;
      }
      .header__button {
        margin-left: 0 !important;
        margin-top: 8px !important;
        width: 100% !important;
        display: flex;
        justify-content: flex-end;
      }
    }
    @media (max-width: 650px) {
      .header__toggle {
        display: block !important;
      }
      .header_nav {
        max-height: 0;
        overflow: hidden;
        background: #ffffff;
        width: 100%;
        margin: 0 !important;
        transition: max-height 0.3s ease;
        position: absolute;
        top: 100%;
        left: 0;
        z-index: 11;
        border-bottom: 1px solid #f0f0f0;
      }
      .header_nav.open {
        max-height: 300px;
        padding-bottom: 16px;
      }
      .header_nav ul {
        flex-direction: column !important;
        gap: 0 !important;
        margin: 0 !important;
        padding: 0 !important;
      }
      .header_nav li {
        border-bottom: 1px solid #f5f5f5;
      }
      .header_nav a {
        display: block;
        padding: 16px 24px !important;
        font-size: 1rem !important;
      }
      .header__button {
        margin-top: 8px !important;
        width: 100% !important;
        justify-content: flex-end;
      }
    }
    .header_nav a:hover {
      color: #007bff !important;
    }
    .searchBtn:hover {
      background: #007bff !important;
      color: #ffffff !important;
      transform: translateY(-1px);
    }
    .header_logo:hover {
      color: #007bff !important;
      transition: color 0.2s ease;
    }
  </style>
  <!-- Font Awesome for hamburger icon -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
  />
</header>
