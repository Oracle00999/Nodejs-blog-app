<main style="min-height: 70vh; background: #fafafa; padding: 60px 0">
  <section
    style="
      max-width: 520px;
      margin: 0 auto;
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
      padding: 48px 40px;
      border: 1px solid #f0f0f0;
    "
  >
    <div style="text-align: center; margin-bottom: 40px">
      <h1
        style="
          color: #2d2d2d;
          font-size: 2.25rem;
          margin: 0 0 12px 0;
          font-weight: 700;
          letter-spacing: -0.5px;
        "
      >
        Contact Us
      </h1>
      <p style="color: #666; margin: 0; font-size: 1.1rem; line-height: 1.6">
        We'd love to hear from you! Fill out the form below and we'll get back
        to you soon.
      </p>
    </div>

    <form
      method="POST"
      action="/contact"
      autocomplete="off"
      style="width: 100%"
    >
      <div style="margin-bottom: 24px">
        <label
          for="name"
          style="
            display: block;
            margin-bottom: 8px;
            color: #2d2d2d;
            font-weight: 600;
            font-size: 0.95rem;
          "
          >Full Name</label
        >
        <input
          type="text"
          id="name"
          name="name"
          required
          style="
            width: 100%;
            padding: 14px 16px;
            border: 1.5px solid #e1e5e9;
            border-radius: 8px;
            font-size: 1rem;
            background: #fff;
            transition: all 0.2s ease;
            color: #2d2d2d;
            font-family: inherit;
          "
          placeholder="Enter your full name"
        />
      </div>

      <div style="margin-bottom: 24px">
        <label
          for="email"
          style="
            display: block;
            margin-bottom: 8px;
            color: #2d2d2d;
            font-weight: 600;
            font-size: 0.95rem;
          "
          >Email Address</label
        >
        <input
          type="email"
          id="email"
          name="email"
          required
          style="
            width: 100%;
            padding: 14px 16px;
            border: 1.5px solid #e1e5e9;
            border-radius: 8px;
            font-size: 1rem;
            background: #fff;
            transition: all 0.2s ease;
            color: #2d2d2d;
            font-family: inherit;
          "
          placeholder="Enter your email address"
        />
      </div>

      <div style="margin-bottom: 32px">
        <label
          for="message"
          style="
            display: block;
            margin-bottom: 8px;
            color: #2d2d2d;
            font-weight: 600;
            font-size: 0.95rem;
          "
          >Your Message</label
        >
        <textarea
          id="message"
          name="message"
          rows="6"
          required
          style="
            width: 100%;
            padding: 14px 16px;
            border: 1.5px solid #e1e5e9;
            border-radius: 8px;
            font-size: 1rem;
            background: #fff;
            resize: vertical;
            transition: all 0.2s ease;
            color: #2d2d2d;
            font-family: inherit;
            min-height: 120px;
          "
          placeholder="Tell us how we can help you..."
        ></textarea>
      </div>

      <button
        type="submit"
        style="
          width: 100%;
          padding: 16px 0;
          background: #007bff;
          color: #fff;
          border: none;
          border-radius: 8px;
          font-size: 1.1rem;
          font-weight: 600;
          cursor: pointer;
          transition: all 0.2s ease;
          letter-spacing: 0.5px;
        "
      >
        Send Message
      </button>
    </form>

    <div
      style="
        margin-top: 40px;
        padding-top: 32px;
        text-align: center;
        color: #666;
        font-size: 1rem;
        border-top: 1px solid #f0f0f0;
      "
    >
      <p style="margin: 0 0 8px 0">Prefer email?</p>
      <a
        href="mailto:info@nodejsblog.com"
        style="
          color: #007bff;
          text-decoration: none;
          font-weight: 600;
          font-size: 1.05rem;
          transition: color 0.2s ease;
        "
      >
        info@nodejsblog.com
      </a>
    </div>
  </section>
</main>

