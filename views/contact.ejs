    background: #fff;
  }

  /* Button hover states */
  main button:hover {
    background: #0056b3 !important;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
  }

  main button:active {
    background: #004085 !important;
    transform: translateY(0);
  }

  /* Link hover states */
  main a:hover {
    color: #0056b3 !important;
