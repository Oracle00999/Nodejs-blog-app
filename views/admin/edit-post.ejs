<div class="admin-edit-container">
  <!-- Header -->
  <div class="admin-edit-header">
    <a href="/admin/dashboard" class="back-btn">
      <i class="fas fa-arrow-left"></i>
      Back to Dashboard
    </a>
    <div class="header-main">
      <h1 class="admin-edit-title">Edit / Delete Post</h1>
      <div class="post-meta">
        <span class="post-id">ID: <%= data._id %></span>
        <span class="post-date">
          <i class="far fa-calendar"></i>
          <%= data.createdAt ? new Date(data.createdAt).toLocaleDateString() :
          'Unknown' %>
        </span>
      </div>
    </div>
  </div>

  <!-- Danger Zone -->
  <div class="danger-zone">
    <h3 class="danger-title">
      <i class="fas fa-exclamation-triangle"></i>
      Danger Zone
    </h3>
    <p class="danger-description">
      Permanently delete this post. This action cannot be undone.
    </p>
    <form
      action="/admin/delete-post/<%= data._id %>?_method=DELETE"
      method="POST"
      class="delete-form"
      onsubmit="return confirmDelete()"
    >
      <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash"></i>
        Delete Post
      </button>
    </form>
  </div>

  <!-- Edit Form -->
  <form
    action="/admin/edit-post/<%= data._id %>?_method=PUT"
    method="POST"
    class="admin-edit-form"
  >
    <div class="form-section">
      <div class="form-group">
        <label for="title" class="form-label">
          Post Title
          <span class="required">*</span>
        </label>
        <input
          type="text"
          id="title"
          name="title"
          class="form-input"
          placeholder="Enter post title"
          value="<%= data.title %>"
          required
        />
      </div>

      <div class="form-group">
        <label for="body" class="form-label">
          Content
          <span class="required">*</span>
        </label>
        <textarea
          id="body"
          name="body"
          class="form-textarea"
          placeholder="Write your post content here..."
          rows="20"
          required
        >
<%= data.body %></textarea
        >
        <div class="form-hint">Supports Markdown formatting</div>
      </div>
    </div>

    <div class="form-actions">
      <button
        type="button"
        class="btn btn-secondary"
        onclick="window.history.back()"
      >
        <i class="fas fa-times"></i>
        Cancel
      </button>
      <a href="/post/<%= data._id %>" class="btn btn-outline" target="_blank">
        <i class="fas fa-eye"></i>
        Preview
      </a>
      <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i>
        Update Post
      </button>
    </div>
  </form>
</div>

